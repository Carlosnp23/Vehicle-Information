<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/black">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="52dp"
        app:cardElevation="0dp"
        android:background="@drawable/color_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/color_border">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Vehicle Information"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:background="@drawable/color_fill"/>

        <EditText
            android:id="@+id/edit_Maker"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:padding="8dp"
            android:hint="Maker"
            android:inputType="text" />

        <EditText
            android:id="@+id/edit_Model"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:padding="8dp"
            android:hint="Model"
            android:inputType="text" />

        <EditText
            android:id="@+id/edit_Year"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:padding="8dp"
            android:hint="Year"
            android:inputType="number" />

        <EditText
            android:id="@+id/edit_Fuel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:padding="8dp"
            android:hint="Fuel"
            android:inputType="text" />

        <Button
            android:id="@+id/btn_Update_CardView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            app:cornerRadius = "30dp"
            android:text="Update"
            android:layout_gravity="center"/>

    </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>